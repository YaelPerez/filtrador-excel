{
  "name": "filtrador-excel",
  "version": "1.0.1",
  "description": "Aplicación de escritorio para filtrar artículos duplicados en Excel",
  "main": "main.js",
  "author": "Yael Pérez",
  "license": "MIT",
  "type": "commonjs",
  "keywords": [
    "excel",
    "electron",
    "filtrar",
    "duplicados"
  ],
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.ypr.filtrador",
    "productName": "Filtrador Excel",
    "publish": [
      {
        "provider": "github",
        "owner": "YaelPerez",
        "repo": "filtrador-excel"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,__tests__}/**",
      "!**/*.md"
    ],
    "directories": {
      "buildResources": "build"
    },
    "artifactName": "Filtrador-Excel-Setup-${version}.${ext}"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  }
}